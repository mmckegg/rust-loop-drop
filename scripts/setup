# flash raspberry pi with latest raspbian lite
# setup ssh access
# then run this script!

scripts/build && \
scp target/armv7-unknown-linux-gnueabihf/release/loop-drop pi@raspberrypi.local:loop-drop && \
scp ./scripts/loop-drop.service pi@raspberrypi.local:loop-drop.service && \
ssh pi@raspberrypi.local "sudo cp loop-drop.service /lib/systemd/system/loop-drop.service && sudo chmod 644 /lib/systemd/system/loop-drop.service && sudo systemctl daemon-reload && sudo systemctl enable loop-drop.service && sudo reboot"
echo "Rebooting Raspberry Pi"